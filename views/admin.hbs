{{> headerAdmin }}

<head>
    <meta charset="utf-8">
    <title>Admin</title>
    <link rel="stylesheet" type="text/css" href="../css/adminpage.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
</head>

<body>
    <div id="status" class="rowa">
        <div class="columna" style="background-color:rgba(255, 255, 255, 0.9);border-top-left-radius:30px; border-bottom-left-radius:30px ">
            <div class="tables">
                <div class="title"><strong>Customers</strong></div>
                <table id='customers'>
                    <tbody>
                        <tr>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                User Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Reservation Number
                            </th>
                            <th>
                                Wait Table Number
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                        {{#each customers}}
                        <tr>
                            <th>
                                {{this.firstName}}
                            </th>
                            <th>
                                {{this.lastName}}
                            </th>
                            <th class="userName">
                                {{this.userName}}
                            </th>
                            <th>
                                {{this.email}}
                            </th>
                            <th>
                                {{this.reservationNum}}
                            </th>
                            <th>
                                {{this.waitListNum}}
                            </th>
                            <th>
                                <button class="delete">Delete</button>
                            </th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    
        <div class="columna" style="background-color:rgba(255, 255, 255, 0.9); border-top-right-radius:30px; 	border-bottom-right-radius: 30px">
            <div class="tables">
                <div class="title"><strong>Restaurant</strong></div>
                <table id='restaurants'>
                    <tbody>
                        <tr>
                            <th>   
                                Resraurant Name
                            </th>
                            <th>
                                Owner
                            </th>
                            <th>
                                Resraurant Type
                            </th>
                            <th>
                                Reservation Number
                            </th>
                            <th>
                                Wait List Number
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                        {{#each restaurants}}
                        <tr>
                            <th class="restName">
                                {{this.restaurantName}}
                            </th>
                            <th class="userName">
                                {{this.owner}}
                            </th>
                            <th>
                                {{this.restaurantType}}
                            </th>
                            <th>
                                {{this.reservationNum}}
                            </th>
                            <th>
                                {{this.waitListNum}}
                            </th>
                            <th>
                                <button class="delete">Delete</button>
                            </th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
       </div>
    </div>
    <script type="text/javascript" src="../js/adminDash.js"></script>
</body>