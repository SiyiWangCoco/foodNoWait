{{> headerUser }}
<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div id="restaurantInfo">
	<span id="resScore">
		<span class="fa fa-star {{check1}}"></span>
		<span class="fa fa-star {{check2}}"></span>
		<span class="fa fa-star {{check3}}"></span>
		<span class="fa fa-star {{check4}}"></span>
		<span class="fa fa-star {{check5}}"></span>
	</span>
	<span id="resName">
		<strong>{{resName}}</strong>
	</span>
	<span id="resAdd">{{resAdd}}</span>
	<span id="phoneNumber">{{resPhone}}</span>
	
</div>

<div id="resImage">
	<img class="image" src={{resImg}}>
</div>

<div id="reserInfo" class="row-1">
	<div id="reservation" class="columna" style="background-color:rgba(255, 255, 255, 0.6);border-top-left-radius:30px; border-bottom-left-radius:30px">
		<div id="reserTitle">Reservation: </div>
		<div id="reserDate">
			<input type="date" id="date" value="2019-04-04">
		</div>
		<br>
  <div class="form-group">
    <span id="peopleTitle">Number of People: </span>
    <select id="peopleSelect" class="form-control">
	      <option>1</option>
	      <option>2</option>
	      <option>3</option>
	      <option>4</option>
	      <option>6</option>
	      <option>7</option>
	      <option>8</option>
	      <option>9</option>
	      <option>10</option>
	      <option>11</option>
	      <option>12</option>
   		</select>
   		</div>
		<br>
		<div id="reserTime">
			<button class="time">12:00</button>	
			<button class="time">13:00</button>	
			<button class="time">14:00</button>	
			<button class="time">15:00</button>	
		
			<button class="time">17:00</button>	
			<button class="time">18:00</button>	
			<button class="time">19:00</button>	
			<button class="time">20:00</button>	
			<button class="time">21:00</button>	
		</div>
	</div>

	<div id="line" class='columna' style="border-left: 3px solid rgba(27, 27, 27,0.8); background-color:rgba(255, 255, 255, 0.8);border-top-right-radius:30px; border-bottom-right-radius:30px" >
		<div id="lineTitle">Current In Line</div>
		<div id="lineInfo">
			<span class="tableInfo">
				Small table(1-2)
				<div id="smallTableNum">{{smallWaitList}}</div>
				<input id="small" type="radio" name="table">
			</span>
			<span class="tableInfo">
				Medium table(3-4)
				<div id="mediumTableNum">{{mediumWaitList}}</div>
				<input id="medium" type="radio" name="table">
			</span>
			<span class="tableInfo">
				Large table(5+)
				<div id="largeTableNum">{{largeWaitList}}</div>
				<input id="large" type="radio" name="table">
			</span>
		</div>
		<br>
		<div id="getInLine"><button>Get in Line</button></div>
	</div>
</div>

<br>
<br>

<div id="comments">
	<div id="commentsHis">
		{{#each comments}}
		<div class="userComment">
			{{#if this.having}} 
				<div id="previewuser" style="background-image: url('/restaurant/{{this.restId}}/{{this._id}}/picture'); border:none"></div>
			{{ else }}
				<div id="previewuser" style="background-image: url('/picture/upload.png"></div>
			{{/if }}
				
            
			
			<span class="user">{{this.commentUserName}}: </span>
			<span class="commentText">{{this.commentInfo}}</span>
		</div>
		{{/each}}
	</div>
	
	<div id="leaveComment">
		<input id="message" type="text" placeholder="Leave your comments here...">
		<br>
		<input id="submitButton" type="submit" value="Submit">
	</div>
</div>
<script type="text/javascript" src="../js/restaurantInfo.js"></script>