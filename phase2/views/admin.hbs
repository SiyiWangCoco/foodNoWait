{{> headerAdmin }}

<head>
    <meta charset="utf-8">
    <title>Admin</title>
    <link rel="stylesheet" type="text/css" href="../css/adminpage.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
</head>

<body>
    <table id='customers'>
        <tbody>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    User Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Reservation Number
                </th>
                <th>
                    Wait Table Number
                </th>
            </tr>
            {{#each customers}}
            <tr>
                <th>
                    {{this.firstName}}
                </th>
                <th>
                    {{this.lastName}}
                </th>
                <th>
                    {{this.userName}}
                </th>
                <th>
                    {{this.email}}
                </th>
                <th>
                    {{this.reservationNum}}
                </th>
                <th>
                    {{this.waitListNum}}
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <table id='owners'>
        <tbody>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Restaurant
                </th>
            </tr>
            {{#each owners}}
            <tr>
                <th>
                    {{this.userName}}
                </th>
                <th>
                    {{this.email}}
                </th>
                <th>
                    {{this.restaurant}}
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <table id='restaurants'>
        <tbody>
            <tr>
                <th>
                    Resraurant Name
                </th>
                <th>
                    Owner
                </th>
                <th>
                    Resraurant Type
                </th>
                <th>
                    Reservation Number
                </th>
                <th>
                    Wait List Number
                </th>
            </tr>
            {{#each restaurants}}
            <tr>
                <th>
                    {{this.restaurantName}}
                </th>
                <th>
                    {{this.owner}}
                </th>
                <th>
                    {{this.restaurantType}}
                </th>
                <th>
                    {{this.reservationNum}}
                </th>
                <th>
                    {{this.waitListNum}}
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>